<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#101010">
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:paddingLeft="6dp"
	    android:paddingTop="6dp"
	    android:paddingRight="6dp"
	    android:paddingBottom="6dp">
	    <LinearLayout
		    android:layout_width="12dp"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:orientation="vertical" >
		    <TextView
			    android:id="@+id/char_detail_skills_list_subitem_primAttr"
			    android:layout_width="12dp"
			    android:layout_height="wrap_content"
			    android:gravity="center"
			    android:textAllCaps="true"
			    android:textColor="#000"
			    android:textStyle="bold"
			    android:textSize="12sp"
			     />
		    <TextView
			    android:id="@+id/char_detail_skills_list_subitem_secAttr"
			    android:layout_width="12dp"
			    android:layout_height="wrap_content"
			    android:gravity="center"
			    android:textAllCaps="true"
			    android:textColor="#000"
			    android:textStyle="bold"
			    android:textSize="12sp"
			     />
		</LinearLayout>
		  <ImageView
		    android:id="@+id/char_detail_skills_subitem_skillIcon"
	       	android:layout_width="36dp"
	       	android:layout_height="36dp"
	       	android:paddingLeft="6dp"
	       	android:paddingRight="6dp"
	       	android:src="@drawable/skills"/>
		<LinearLayout
		    android:layout_weight="1"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:orientation="vertical" >
		    <TextView
			    android:id="@+id/char_detail_skills_list_item_skillname"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textColor="#BBB"
			    android:textStyle="bold"
			    android:textSize="12sp"
			     />
		    <TextView
			    android:id="@+id/char_detail_skills_list_item_skillsptext"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textColor="#999"
			    android:textSize="11sp"
			     />
		</LinearLayout>
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:orientation="vertical" >
		    <com.zdonnell.eden.character.detail.SkillLevelIndicator
		        android:id="@+id/skill_level_indicator"
		    	android:layout_width="50dp"
		    	android:layout_height="12dp"/>
		    <TextView
		        android:id="@+id/char_detail_skills_list_item_skillTimeRemaining"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="right"
		        android:paddingTop="2dp"
		        android:textColor="#424242"
		        android:visibility="gone"
		     	android:textSize="12sp"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
