<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181818"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_height="120dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#242424"
        android:padding="10dp">
        <com.zdonnell.eden.character.detail.SquareLinearLayout
	   	    android:id="@+id/char_detail_assets_list_item_typeIconBorder"
	   	    android:padding="1dp"
	   	    android:background="#000"
	   	    android:layout_width="100dp"
	   		android:layout_height="100dp"
	   		android:layout_marginRight="10dp">
	   	    <ImageView 
		        android:id="@+id/type_info_typeIcon"
		        android:layout_width="match_parent"
		        android:scaleType="fitCenter"
		        android:layout_height="match_parent"
		        android:background="#181818"/>
	   	</com.zdonnell.eden.character.detail.SquareLinearLayout>
	   	<LinearLayout
	        android:layout_height="wrap_content"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center_vertical">
	   	    <TextView 
		        android:id="@+id/type_info_name"
		        android:shadowColor="#000"
		        android:shadowDx="3"
		        android:shadowDy="3"
		        android:shadowRadius="9"
		        android:textSize="16sp"
		        android:textStyle="bold"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        />
	   	    <TextView 
		        android:id="@+id/type_info_value"
		        android:textColor="#449944"
		        android:shadowColor="#000"
		        android:shadowDx="2"
		        android:shadowDy="2"
		        android:shadowRadius="6"
		        android:textStyle="bold"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        />
	   	    <TextView 
		        android:id="@+id/type_info_m3"
		        android:text="0.01 m3"
		        android:textColor="#999"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        />
	   	</LinearLayout>
    </LinearLayout> 
    <TextView 
        android:id="@+id/type_info_description"
        android:maxLines = "1000"
		android:scrollbars = "vertical"
        android:textColor="#999"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"/>
</LinearLayout>