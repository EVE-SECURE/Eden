<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#141414" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="210dp"
	    android:orientation="vertical"
	    android:background="#BBB" >
	    
        
	    <ImageView 
	    	android:id="@+id/char_sheet_portrait"
	    	android:layout_width="match_parent"
	    	android:layout_height="210dp"
	    	android:scaleType="centerCrop"></ImageView>
	  
	    
	   
	    <ImageView
        android:id="@+id/tile_text_bg"
        android:layout_width="match_parent"
        android:layout_height="135dip"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/gradient" ></ImageView>
	    
	    <LinearLayout 
	        android:padding="7dp"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_alignParentBottom="true"
	        android:orientation="horizontal" >
	        <LinearLayout 
		        android:layout_width="0dp"
		        android:layout_weight="2"
		        android:layout_gravity="center_vertical"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" >
		        <TextView 
		            android:id="@+id/current_skill"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:textColor="#FFF"
		            android:text="Weapon Upgrades V" />
		        <TextView 
		            android:id="@+id/current_skill_time"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:textColor="#AAA"
		            android:textSize="12sp"
		            android:text="5d 12h 3s Remaining" />"
		    </LinearLayout>
		    <LinearLayout 
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="50dp"
		        android:orientation="vertical" >
		        <TextView 
		            android:id="@+id/current_sp"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right"
		            android:textColor="#FFF"
		            android:text="68,382,424" />
		        <TextView 
		            android:id="@+id/current_clone"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right"
		            android:textColor="#AAA"
		            android:textSize="12sp"
		            android:text="(72,000,000)" />
		    </LinearLayout>
	    </LinearLayout>
	</RelativeLayout>
	
