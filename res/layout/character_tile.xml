<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/char_image"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/tile_text_bg"
        android:layout_width="fill_parent"
        android:layout_height="135dip"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/gradient" >
    </ImageView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/corp_image"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/char_tile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dip"
                android:text="Character Name"
                android:textColor="#BBB"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/char_tile_training"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dip"
                android:lines="1"
                android:padding="2dip"
                android:text="Currently Training: Skill V"
                android:textColor="#AAA"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>