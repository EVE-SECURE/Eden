<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    
	<ImageView 
	    android:id="@+id/char_image"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:padding="1dip"/>
	<ImageView
	    android:src="@drawable/gradient"
	    android:scaleType="fitXY"
	    android:id="@+id/tile_text_bg"
        android:layout_alignParentBottom="true"
	    android:layout_width="fill_parent"
	    android:padding="1dip"
	    android:layout_height="135dip" >
	</ImageView>
	<LinearLayout
        android:layout_alignParentBottom="true"
	    android:layout_width="fill_parent"
	    android:layout_height="45dip"
	    android:orientation="horizontal" >
	    <ImageView 
	        android:scaleType="fitXY"
		    android:id="@+id/corp_image"
		    android:layout_width="45dip"
		    android:layout_height="45dip"/>
	    <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="45dip"
		    android:orientation="vertical" >
	    
			<TextView 
			    android:id="@+id/char_tile_name"
			    android:text="Character Name"
			    android:textStyle="bold"
			    android:textColor="#BBB"
			    android:textSize="16dp"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:padding="2dip"/>
			<TextView 
			    android:id="@+id/char_tile_training"
			    android:text="Currently Training: Skill V"
			    android:textColor="#AAA"
			    android:textSize="12dp"
			    android:lines="1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:padding="2dip"
			    android:layout_marginTop="-5dip"/>
	    
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>