<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:paddingLeft="8dp"
	    android:paddingTop="8dp"
	    android:paddingRight="8dp"
	    android:paddingBottom="5dp" >
	    
	    <ImageView
	       	android:layout_width="40dp"
	       	android:layout_height="40dp"
	       	android:paddingRight="8dp"
	       	android:src="@drawable/skills"/>
	    <View
		    android:layout_width="1px"
		    android:layout_height="match_parent"
		    android:background="#999"
	    />
		
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_weight="1"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >
		    <TextView
			    android:id="@+id/skillqueue_detail_list_item_skillname"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:padding="8dp"
			    android:text="Skill Name"
			    android:textColor="#424242"
			    android:textSize="14sp"
			     />
		</LinearLayout>
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >
		    <com.zdonnell.eve.character.detail.SkillLevelIndicator
		        android:id="@+id/skill_level_indicator"
		    	android:layout_width="60dp"
		    	android:layout_height="16dp"/>
		    <TextView
		        android:id="@+id/skill_level_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="right"
		        android:paddingTop="2dp"
		        android:text="Level"
		        android:textColor="#424242"
		     	android:textSize="14sp"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
